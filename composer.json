{
    "name": "struggle-for-php/sfp-phpstan-pdo",
    "description": "PDO extensions for PHPStan",
    "type": "phpstan-extension",
    "keywords": ["phpstan", "pdo"],
    "license": [
        "MIT"
    ],
    "require": {
        "php":">=7.4.0",
        "phpstan/phpstan": "^0.12"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^8.1",
        "zendframework/zend-coding-standard": "2.0.0-alpha3",
        "infection/infection": "^0.15.0"
    },
    "autoload": {
        "psr-4": {
            "Sfp\\PHPStan\\PDO\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SfpTest\\PHPStan\\PDO\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    }
}
